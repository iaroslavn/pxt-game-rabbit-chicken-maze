{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "outDir": "built",
    "rootDir": ".",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/main.ts",
    "test/**",
    "pxt_modules/**"
  ]
}